{
  "name": "tauri-nexus",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter @tauri-nexus/app dev",
    "build": "bun run --filter @tauri-nexus/app build",
    "preview": "bun run --filter @tauri-nexus/app preview",
    "tauri": "bun run --filter @tauri-nexus/app tauri",
    "test": "bun run --filter '*' test",
    "test:watch": "bun run --filter @tauri-nexus/app test:watch",
    "test:coverage": "bun run --filter @tauri-nexus/app test:coverage"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "typescript": "~5.9.3"
  }
}
